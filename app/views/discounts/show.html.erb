<div class="bg-white rounded-lg shadow p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-semibold">Discount Details</h1>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_account_discount_path(current_account, @discount), 
            data: { turbo_frame: :offcanvas },
            class: "px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700" %>
      <%= button_to "Delete", account_discount_path(current_account, @discount), 
            method: :delete, 
            class: "px-3 py-1 bg-red-600 text-white rounded hover:bg-red-700",
            data: { turbo_confirm: "Are you sure?" } %>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Title</label>
      <p class="text-sm text-gray-900"><%= @discount.title %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Position</label>
      <p class="text-sm text-gray-900"><%= @discount.position %></p>
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Rule</label>
      <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= @discount.rule %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Move</label>
      <p class="text-sm text-gray-900"><%= @discount.move %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Shift</label>
      <p class="text-sm text-gray-900"><%= @discount.shift %></p>
    </div>
    <div>
      <label class="block text-sm font-medium text-gray-700 mb-1">Points</label>
      <p class="text-sm text-gray-900"><%= @discount.points %></p>
    </div>
    <div class="md:col-span-2">
      <label class="block text-sm font-medium text-gray-700 mb-1">Notice</label>
      <p class="text-sm text-gray-900 whitespace-pre-wrap"><%= @discount.notice %></p>
    </div>
  </div>
</div>

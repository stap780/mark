<%= turbo_frame_tag "style_#{field}" do %>
  <div class="flex items-center justify-between">
    <label class="block text-sm font-medium text-gray-700"><%= SwatchGroup.field_i18n(field) %></label>
    <%= link_to t(:select_style), style_selector_account_swatch_groups_path(current_account, field: field, current: value), data: { turbo_frame: :offcanvas }, class: 'text-violet-600 hover:underline text-sm' %>
  </div>
  <%= hidden_field_tag "swatch_group[#{field}]", value %>
  <%= text_field_tag nil, label, disabled: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5 bg-gray-50", placeholder: label %>
<% end %>



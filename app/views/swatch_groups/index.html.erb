<div class="flex items-center justify-between mb-4">
  <h1 class="text-xl font-semibold"><%= t("swatch_groups.index.heading") %></h1>
  <div class="flex space-x-2">
    <%= search_form_for @search, url: account_swatch_groups_path(current_account), method: :get, html: { class: "flex items-center space-x-2" } do |f| %>      
      <%= f.label :name_cont, t(:search_by_name), class: "sr-only" %>
      <%= f.search_field :name_cont, value: params.dig(:q, :name_cont), placeholder: "#{t(:search_by_name)}...", class: "px-2 py-1 border rounded", style: "width: 350px;" %>
      <%= f.submit t(:search), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
      <%= link_to_clear account_swatch_groups_path(current_account) %>
    <% end %>
  </div>
  <div class="flex space-x-2">
    <% if current_account.swatch_groups.exists? %>
      <%= link_to t(:regenerate_json), regenerate_json_account_swatch_groups_path(current_account), 
        data: { turbo_method: :post }, 
        class: "inline-flex items-center px-3 py-1 bg-blue-600 text-white rounded-md hover:bg-blue-700"%>
    <% end %>
    <% if current_account.swatch_groups.exists? && current_account&.insales&.first&.swatch_file&.attached? %>
      <%= link_to t(:swatch_file), current_account.insales.first.swatch_s3_url, target: "_blank", 
        class: "inline-flex items-center px-3 py-1 bg-green-600 text-white rounded-md hover:bg-green-700" %>
    <% end %>
    <%= link_to_new new_account_swatch_group_path(current_account) %>
  </div>
</div>

<%= turbo_stream_from [current_account, :swatch_groups] %>

<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[50px_1fr_1fr_1fr_120px] gap-4 p-4 font-medium text-gray-700">
    <div><%= t('activerecord.columns.number') %></div>
    <div><%= t('activerecord.columns.name') %></div>
    <div><%= t('activerecord.columns.option') %></div>
    <div><%= t('activerecord.columns.status') %></div>
    <div></div>
  </div>
  <%= turbo_frame_tag [current_account, :swatch_groups] do %>
    <%= render @swatch_groups %>
    <%= render "shared/paginate", f: @swatch_groups %>
  <% end %>
</div>
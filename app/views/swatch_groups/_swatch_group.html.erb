<%= turbo_frame_tag [swatch_group.account, dom_id(swatch_group)], class: "grid grid-cols-5 gap-4 p-4 items-center" do %>
  <div class="truncate"><%= swatch_group.id %></div>
  <div class="truncate"><%= swatch_group.name %></div>
  <div class="truncate"><%= swatch_group.option_name %></div>
  <div class="truncate"><%= swatch_group.status %></div>
  <div class="space-x-2 flex items-center justify-center">
    <%= link_to "Edit", edit_account_swatch_group_path(swatch_group.account, swatch_group), 
    class: "text-violet-700 hover:underline flex items-center justify-center",
    data: { turbo_frame: "_top" } %>
    <%= link_to account_swatch_group_path(swatch_group.account, swatch_group), 
    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, 
    class: "float-right p-2 rounded-md bg-red-300 hover:bg-red-400 flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
      <% end %>
  </div>
<% end %>
<%= render 'shared/offcanvas_inner', title: 'Add product to group' do %>
  <div data-controller="product-picker" data-search-url="<%= products_search_account_insales_path(current_account) %>">
    <label class="block text-sm font-medium text-gray-700">Find product</label>
    <input data-product-picker-target="input" type="text" placeholder="Type to search..." class="mt-1 mb-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" data-action="input->product-picker#search">
    <div data-product-picker-target="results" class="space-y-2"></div>
    <div data-product-picker-target="selected"></div>
  </div>
  <%= form_with url: account_swatch_group_swatch_group_products_path(current_account, @swatch_group), scope: :swatch_group_product, class: "space-y-3 mt-4", data: { turbo_frame: '_top' } do |f| %>
    <%= hidden_field_tag :external_offer_id %>
    <%= hidden_field_tag :external_title %>
    <%= hidden_field_tag :external_image %>
    <div class="grid grid-cols-2 gap-4">
      <div>
        <%= f.label :swatch_label, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :swatch_label, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
      </div>
      <div>
        <%= f.label :swatch_value, class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :swatch_value, placeholder: "#RRGGBB or URL", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
      </div>
    </div>
    <div>
      <%= f.label :custom_image_url, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :custom_image_url, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
    <div class="flex justify-end space-x-2">
      <button type="button" class="px-3 py-1 rounded-md border text-gray-700 hover:bg-gray-50" data-action="offcanvas#close">Cancel</button>
      <%= f.submit "Add", class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    </div>
  <% end %>
<% end %>



    var scr = document.createElement('script');
    scr.setAttribute("type","text/javascript");
    scr.setAttribute("src", 'https://s3.twcstorage.ru/ae4cd7ee-b62e0601-19d6-483e-bbf1-416b386e5c23/scripts/webform.js?id=<%= current_account.id %>');
    document.getElementsByTagName("head")[0].appendChild(scr);
})();
        &lt;/script&gt;</code>
        </pre>
    </div>
<% end %>
<%= turbo_frame_tag dom_id(current_account, dom_id(webform)), class: "grid grid-cols-[80px_1fr_150px_100px_150px] gap-4 p-4 items-center" do %>
  <div><%= webform.id %></div>
  <div><%= webform.title %></div>
  <div><%= webform.kind %></div>
  <div><%= webform.status %></div>
  <% app_type = current_account.settings.dig("apps")&.find { |app| app.start_with?('ins') } %>
  <div class="flex justify-end items-center space-x-2">
    <% unless app_type == 'insnotify' %>
      <%= link_to_edit edit_account_webform_path(current_account, webform), data: { turbo_frame: :offcanvas, turbo_prefetch: false } %>
    <% end %>
    <%= link_to_show account_webform_path(current_account, webform), data: { turbo: false }, title: "Preview" %>
    <% unless app_type == 'insnotify' %>
      <%= link_to_delete account_webform_path(current_account, webform), data: { turbo_method: :delete, turbo_confirm: "Delete webform?" } %>
    <% end %>
  </div>
<% end %>
<%= render 'shared/offcanvas_inner', title: t('.title', default: 'Send Test Email'), width: '30rem' do %>
  <%= form_with url: test_email_account_email_setup_path(current_account, @email_setup), method: :post, data: { turbo_stream: true }, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :test_email, t('.email_label', default: 'Email Address'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :test_email, placeholder: "test@example.com", required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
      <p class="mt-2 text-xs text-gray-500">
        <%= t('.description', default: 'Enter an email address to send a test email and verify SMTP settings.') %>
      </p>
    </div>
    <div class="flex justify-end space-x-2">
      <button type="button" class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200" data-action="offcanvas#close"><%= t('cancel') %></button>
      <%= f.submit t('send'), class: "inline-flex items-center px-3 py-1 bg-green-600 text-white rounded-md hover:bg-green-700" %>
    </div>
  <% end %>
<% end %>


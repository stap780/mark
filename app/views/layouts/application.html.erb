<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Mark" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= authenticated? ? 'bg-gray-50 h-screen flex' : 'bg-gray-50' %>">
      <% if authenticated? %>
        <%= render "shared/flash" %>
        <!-- Sidebar -->
        <div class="w-64 bg-gradient-to-b from-violet-600 to-purple-700 text-white flex flex-col">
          <!-- Brand -->
          <div class="px-6 py-4 flex items-center">
            <div class="h-8 w-8 bg-white rounded-lg flex items-center justify-center"></div>
            <span class="ml-3 text-lg font-semibold">Mark</span>
          </div>
          
          <!-- Nav -->
          <nav class="flex-1 px-4 pb-4 space-y-1">
            <% if current_account.admin? %>

              <%= link_to_sidebar 'Admin Dashboard', admin_dashboard_path, active_if: '/admin/dashboard' %>
              <%= link_to_sidebar t(:users), admin_users_path, active_if: '/admin/users' %>
              <%= link_to_sidebar t(:accounts), admin_accounts_path, active_if: '/admin/accounts' %>
              <%= link_to_sidebar t(:jobs), admin_jobs_path, active_if: '/admin/jobs', data: { turbo: false } %>

            <% else %>

              <%= link_to_sidebar t(:dashboard), account_dashboard_path(current_account), active_if: '/dashboard' %>
              <%= link_to_sidebar "Incases", account_incases_path(current_account), active_if: '/incases' %>
              <%= link_to_sidebar t(:clients), account_clients_path(current_account), active_if: '/clients' %>
              <%= link_to_sidebar t(:products), account_products_path(current_account), active_if: '/products' %>
              <%= link_to_sidebar t(:discounts), account_discounts_path(current_account), active_if: '/discounts' %>
              <%= link_to_sidebar t(:lists), account_lists_path(current_account), active_if: '/lists' %>
              <%= link_to_sidebar t(:swatches), account_swatch_groups_path(current_account), active_if: '/swatch_groups' %>
              <%= link_to_sidebar "Webforms", account_webforms_path(current_account), active_if: '/webforms' %>
              
              <div data-controller="accordion" 
                  data-accordion-open-value="<%= request.path.include?('/insales') || request.path.include?('/users') %>">
                <button type="button" data-action="click->accordion#toggle"
                        class="group flex items-center justify-between w-full px-3 py-2 text-sm font-medium rounded-lg text-white hover:bg-violet-500 hover:bg-opacity-75 <%= 'bg-violet-500 bg-opacity-75' if request.path.include?('/insales') || request.path.include?('/users') %>">
                  <span><%= t(:settings) %></span>
                  <svg data-accordion-target="arrow" class="w-4 h-4 transition-transform duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </button>
                
                <div data-accordion-target="content" class="hidden ml-4 space-y-1">
                  <%= link_to_sidebar t(:insales), account_insales_path(current_account), active_if: '/insales' %>
                  <%= link_to_sidebar t(:users), account_users_path(current_account), active_if: '/users' %>
                </div>
              </div>

            <% end %>

          </nav>
        </div>

        <!-- Right column -->
        <div class="flex-1 flex flex-col">
          <!-- Top bar -->
          <div class="bg-white shadow">
            <div class="px-4 sm:px-6 lg:px-8 h-16 flex items-center justify-end">
              <div class="menu-right flex items-center space-x-4 ml-3">
              <!-- Language Switcher -->
                <div class="langiages flex items-center space-x-2 text-sm">
                  <%= link_to "EN", switch_locale_path(:en), data: { turbo_prefetch: false },
                      class: current_locale == :en ? 'font-bold underline' : 'opacity-75 hover:opacity-100' %>
                  <span class="text-violet-300">|</span>
                  <%= link_to "RU", switch_locale_path(:ru), data: { turbo_prefetch: false },
                      class: current_locale == :ru ? 'font-bold underline' : 'opacity-75 hover:opacity-100' %>
                </div>
                <span class="text-gray-700 text-sm font-medium"><%= Current.user&.email_address %></span>
                <%= button_to t(:sign_out), session_path, method: :delete,
                      class: "inline-flex items-center px-3 py-1 text-sm font-medium rounded-md text-gray-700 hover:text-gray-900 cursor-pointer" %>
              </div>
            </div>
          </div>
          
          <!-- Page content -->
          <main class="flex-1 overflow-y-auto">
            <div class="py-6">
              <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-4">
                <%= yield %>
              </div>
            </div>
            
            <%= turbo_frame_tag :offcanvas %>
            <%= turbo_frame_tag :offcanvas_left %>

          </main>
        </div>
      <% else %>
        <%= yield %>
      <% end %>
  </body>
</html>

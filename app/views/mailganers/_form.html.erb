<%= form_with(model: [current_account, mailganer], class: "p-4") do |f| %>
  <div class="space-y-4">
    <%= render "shared/errors", object: f.object %>
    <div>
      <%= f.label :api_key, t('activerecord.attributes.mailganer.api_key', default: 'API Key'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :api_key, placeholder: "SMTP API key", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div>
      <%= f.label :smtp_login, t('activerecord.attributes.mailganer.smtp_login', default: 'SMTP Login'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :smtp_login, placeholder: "SMTP login (e.g. 6454)", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div>
      <%= f.label :api_key_web_portal, t('activerecord.attributes.mailganer.api_key_web_portal', default: 'API Key Web Portal'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :api_key_web_portal, placeholder: "api.samotpravil.ru", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div class="pt-2">
      <%= f.submit t('save'), class: "inline-flex items-center px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    </div>
  </div>
<% end %>



<%= render 'shared/offcanvas_inner', title: t('telegram_setups.test_message.title', default: 'Отправить тестовое сообщение'), width: '30rem' do %>
  <%= form_with url: test_message_account_telegram_setup_path(current_account, @telegram_setup), method: :post, data: { turbo_stream: true }, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :test_recipient, t('telegram_setups.test_message.recipient_label', default: 'Получатель'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :test_recipient, placeholder: "@username или chat_id", required: true, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
      <p class="mt-2 text-xs text-gray-500">
        Введите @username или chat_id получателя
      </p>
    </div>
    <div>
      <%= f.label :test_text, t('telegram_setups.test_message.text_label', default: 'Текст сообщения'), class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :test_text, rows: 3, placeholder: "Тестовое сообщение", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div class="flex justify-end space-x-2">
      <button type="button" class="inline-flex items-center px-3 py-1 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200" data-action="offcanvas#close"><%= t('cancel') %></button>
      <%= f.submit t('send'), class: "inline-flex items-center px-3 py-1 bg-green-600 text-white rounded-md hover:bg-green-700" %>
    </div>
  <% end %>
<% end %>

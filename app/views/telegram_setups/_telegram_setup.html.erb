<%= turbo_frame_tag dom_id(current_account, dom_id(telegram_setup)), class: "grid grid-cols-[1fr_1fr_150px] gap-4 p-4 items-center border-t" do %>
  <div class="text-sm">
    <% if telegram_setup.bot_token.present? %>
      ✓ Настроен<%= " (#{telegram_setup.bot_display_name})" if telegram_setup.bot_display_name.present? %>
    <% else %>
      Не настроен
    <% end %>
  </div>
  <div class="text-sm">
    <%= telegram_setup.personal_authorized? ? "✓ Авторизован (#{telegram_setup.personal_phone})" : "Не авторизован" %>
  </div>
  <div class="flex justify-end space-x-1">
    <%= link_to_edit edit_account_telegram_setup_path(current_account, telegram_setup),
          data: { turbo_frame: 'offcanvas', turbo_prefetch: false } %>
    <%= link_to_delete account_telegram_setup_path(current_account, telegram_setup),
          data: { turbo_method: :delete, turbo_confirm: 'Удалить настройки Telegram?' } %>
  </div>
<% end %>

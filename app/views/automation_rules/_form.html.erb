<%= form_with model: [current_account, automation_rule],
  data: (automation_rule.new_record? ? { turbo: false } : { turbo_stream: true, controller: "auto-submit", "auto-submit-delay-value": 200 }),
  class: "space-y-4" do |f| %>
  <%= render "shared/errors", object: automation_rule %>

  <!-- Основные поля - всегда видны -->
  <div class="flex flex-wrap gap-4 mb-4">
    <div class="flex-1">
      <%= f.label :title, "Название правила", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
    <div class="flex-1">
      <%= f.label :event, "Событие", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :event,
          AutomationRule::EVENTS.map { |key, value| [value, key] },
          { selected: automation_rule.event, include_blank: "Выберите событие" },
          class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
  </div>

  <% if automation_rule.persisted? %>
    <!-- Поля только для существующих записей -->
    <div class="flex flex-wrap gap-4">
      <div class="flex-1">
        <%= f.label :active, class: "flex items-center" do %>
          <%= f.check_box :active, class: "mr-2" %>
          <span>Активно</span>
        <% end %>
      </div>

      <!-- Задержка выполнения -->
      <div class="flex-1">
        <%= f.label :delay_seconds, "Задержка выполнения (секунды)", class: "block text-sm font-medium text-gray-700" %>
        <%= f.number_field :delay_seconds,
            value: automation_rule.delay_seconds || 0,
            min: 0,
            step: 1,
            class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
      </div>
    </div>

  <% end %>
  
  <% if automation_rule.persisted? %>
    <div class="bg-white rounded-lg shadow p-4 mt-4">
      <!-- Действия - только для persisted, через turbo -->
      <div class="mt-2 space-y-3 mt-6">
        <div class="flex items-center justify-between mb-2">
          <label class="block text-sm font-medium text-gray-700">Действия</label>
          <% path = automation_rule.new_record? ? new_account_automation_action_path(current_account, automation_rule) : new_account_automation_rule_automation_action_path(current_account, automation_rule) %>
          <%= link_to "+ Добавить действие", path,data: { turbo_stream: true },class: "text-sm text-violet-600 hover:text-violet-800" %>
        </div>

        <%= turbo_frame_tag dom_id(current_account, dom_id(automation_rule, :automation_actions)), class: "space-y-2" do %>
          <!-- Header row -->
          <div class="grid grid-cols-[2fr_2fr_50px] gap-4 p-2 border-b font-medium text-sm text-gray-700">
            <div>Тип</div>
            <div>Значение</div>
            <div></div>
          </div>
          
          <% automation_rule.automation_actions.order(:position).each do |action| %>
            <%= render "automation_actions/automation_action", automation_rule: automation_rule, automation_action: action, current_account: current_account %>
          <% end %>
          
          <%= turbo_frame_tag dom_id(current_account, dom_id(@automation_rule, :automation_actions_empty)) do %>
            <div class="text-sm text-gray-500 border rounded p-3">Нет действий. Добавьте первое действие.</div>
          <% end if automation_rule.automation_actions.empty? %>

        <% end %>
      </div>
    </div>
  <% end %>

  <div class="flex justify-end space-x-2">
    <%= f.submit automation_rule.new_record? ? "Создать" : "Обновить",
        class: "px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700", data: { turbo: false } %>
    <%= link_to "Отмена", account_automation_rules_path(current_account),
        class: "px-3 py-1 bg-gray-200 rounded-md hover:bg-gray-300" %>
  </div>
<% end %>
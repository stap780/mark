<%= form_with model: [current_account, product, variant, varbind], class: "space-y-4", data: { turbo_stream: true } do |f| %>
  <%= render "shared/errors", object: varbind %>
  <%= f.hidden_field :variant_id, value: variant.id %>
  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= f.label :varbindable_type, class: "block text-sm font-medium text-gray-700" unless varbind.persisted? %>
      <%= f.select :varbindable_type, Varbind.int_types, { include_blank: false }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
    <div>
      <%= f.label :varbindable_id, class: "block text-sm font-medium text-gray-700" unless varbind.persisted? %>
      <%= f.select :varbindable_id, Varbind.int_ids, { include_blank: false }, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
    <div>
      <%= f.label :value, class: "block text-sm font-medium text-gray-700" unless varbind.persisted? %>
      <%= f.text_field :value, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
    </div>
  </div>
  <div class="flex justify-end space-x-2">
    <%= link_to 'Cancel', account_product_variant_varbinds_path(current_account,product, variant), class: "px-3 py-1 rounded-md border text-gray-700 hover:bg-gray-50", data: { turbo_stream: true } %>
    <%= f.submit t(:save, default: 'Save'), class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
<% end %>



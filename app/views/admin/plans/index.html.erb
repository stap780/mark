<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold"><%= t('admin.plans.plans') %></h1>
  <%= link_to t('admin.plans.new_plan'), new_admin_plan_path, data: { turbo_frame: :offcanvas },
        class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
</div>

<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[1fr_140px_140px_140px_140px] gap-4 p-4 font-medium text-gray-700">
    <div><%= t('admin.plans.name') %></div>
    <div><%= t('admin.plans.price') %></div>
    <div><%= t('admin.plans.interval') %></div>
    <div><%= t('admin.plans.trial') %></div>
    <div></div>
  </div>
  <%= turbo_frame_tag :admin_plans do %>
    <%= render @plans %>
    <%= render "shared/paginate", f: @plans %>
  <% end %>
</div>


<div class="flex items-center justify-between mb-4">
  <h1 class="text-xl font-semibold">All Users</h1>
</div>

<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[1fr_1fr] gap-4 p-4 font-medium text-gray-700">
    <div>Email</div>
    <div>Accounts</div>
  </div>
  <% @users.each do |user| %>
    <div class="grid grid-cols-[1fr_1fr] gap-4 p-4 items-center">
      <div class="text-sm font-medium"><%= user.email_address %></div>
      <div class="text-sm text-gray-700">
        <% user.account_users.includes(:account).each do |au| %>
          <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-100 text-gray-800 mr-1 mb-1">
            <%= au.account.name %> â€¢ <%= au.role.humanize %>
          </span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>



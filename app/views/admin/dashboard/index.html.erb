<div class="px-4 py-6">
  <h1 class="text-2xl font-semibold mb-6">Admin Dashboard</h1>

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Accounts</div>
      <div class="text-2xl font-bold mt-1"><%= @accounts_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Users</div>
      <div class="text-2xl font-bold mt-1"><%= @users_count %></div>
    </div>
    <div class="bg-white rounded-lg shadow p-4">
      <div class="text-sm text-gray-500">Memberships</div>
      <div class="text-2xl font-bold mt-1"><%= @account_users_count %></div>
    </div>
  </div>

  <div class="mt-8">
    <%= link_to "Manage Accounts", admin_accounts_path,
          class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
</div>



<%= turbo_frame_tag dom_id(account), class: "grid grid-cols-[40px_1fr_160px_240px_140px_120px] gap-4 p-4 items-center hover:bg-gray-50" do %>
  <div class="truncate"><%= account.id %></div>
  <% subscription = account_subscription(account) %>
  <div class="flex flex-col gap-1 text-sm font-medium text-violet-700">
    <div class="flex items-center gap-2">
      <span><%= account.name %></span>
      <span class="text-xs text-gray-500">
        <%= t('admin.accounts.user_count') %>: <%= account.users.count %>
      </span>
    </div>
    <div>
      <% if account.admin? %>
        <span class="px-2 py-1 text-xs rounded-full bg-purple-100 text-purple-800">
          <%= t('admin.accounts.admin') %>
        </span>
      <% else %>
        <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-800">
          <%= t('admin.accounts.regular') %>
        </span>
      <% end %>
    </div>
  </div>
  <div class="text-sm flex flex-col gap-1">
    <div>
      <% if account.subscription_active? %>
        <span class="px-2 py-1 text-xs rounded-full bg-green-100 text-green-800"><%= t('admin.accounts.active') %></span>
      <% else %>
        <span class="px-2 py-1 text-xs rounded-full bg-red-100 text-red-800">
          <%= subscription&.status&.humanize.presence || t('admin.accounts.no_subscription') %>
        </span>
      <% end %>
    </div>
    <div class="text-xs text-gray-700">
      <% if subscription&.current_period_end.present? %>
        <%= t('admin.accounts.subscription_until') %>: <%= l(subscription&.current_period_end&.to_date, format: :long) %>
      <% else %>
        <% last_subscription_end = account.subscriptions.order(current_period_end: :desc).first&.current_period_end %>
        <% if last_subscription_end.present? %>
          <%= t('admin.accounts.subscription_until') %>: <%= l(last_subscription_end.to_date, format: :long) %> (<%= t('admin.accounts.inactive', default: 'Не активна') %>)
        <% else %>
          <%= t('admin.accounts.no_subscription') %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="text-sm">
    <% plan_name = subscription&.plan&.name %>
    <% if plan_name.present? %>
      <span class="px-2 py-1 text-xs rounded-full bg-blue-100 text-blue-800"><%= plan_name %></span>
    <% else %>
      <span class="text-xs text-gray-500"><%= t('admin.accounts.no_plan') %></span>
    <% end %>
  </div>
  <div class="text-sm">
    <% if account.partner? %>
      <span class="px-2 py-1 text-xs rounded-full bg-amber-100 text-amber-800"><%= t('admin.accounts.partner_yes') %></span>
    <% else %>
      <span class="px-2 py-1 text-xs rounded-full bg-gray-100 text-gray-700"><%= t('admin.accounts.partner_no') %></span>
    <% end %>
  </div>
  <div class="flex justify-end items-center space-x-2">
    <%= link_to_show admin_account_path(account), data: { turbo: false } %>
    <%= link_to_edit edit_admin_account_path(account), data: { turbo_frame: :offcanvas } %>
    <% unless account.admin? && Current.session&.user&.accounts&.include?(account) %>
      <%= link_to_delete admin_account_path(account), data: { turbo_confirm: t('admin.accounts.delete_account_confirm') } %>
    <% end %>
  </div>
<% end %>


<%= form_with model: [current_account, @webform, @webform_field], 
    data: { turbo_stream: true },
    class: "space-y-4" do |f| %>
    <%= render "shared/errors", object: @webform_field %>


  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5", placeholder: "e.g., email" %>
  </div>

  <div>
    <%= f.label :label, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :label, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5", placeholder: "e.g., Enter email" %>
  </div>

  <div>
    <%= f.label :field_type, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :field_type, [['text','text'],['email','email'],['textarea','textarea'],['phone','phone'],['number','number'],['select','select'],['checkbox','checkbox'],['button','button']], {}, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" %>
  </div>

  <div>
    <%= f.label :required, class: "block text-sm font-medium text-gray-700" %>
    <%= f.check_box :required, class: "mt-1 h-4 w-4 text-violet-600 focus:ring-violet-500 border-gray-300 rounded" %>
  </div>

  <%# tag.div do %>
    <%# f.label :position, class: "block text-sm font-medium text-gray-700" %>
    <%# f.number_field :position, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5", value: (@webform_field.new_record? ? (@webform.webform_fields.count + 1) : @webform_field.position) %>
  <%# end %>

  <div>
    <%= f.submit (@webform_field.new_record? ? 'Create' : 'Update'), class: "inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
<% end %>


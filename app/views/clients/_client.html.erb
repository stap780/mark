<%= turbo_frame_tag client, class: "grid grid-cols-5 gap-4 p-4 items-center" do %>
  <div class="truncate"><%= "#{client.name} #{client.surname}" %></div>
  <div class="text-sm text-gray-600"><%= client.email %></div>
  <div class="text-sm text-gray-600"><%= client.phone %></div>
  <div class="space-x-2">
    <%= link_to "Show", account_client_path(current_account, client), class: "text-violet-700 hover:underline", data: { turbo_frame: "offcanvas", turbo_prefetch: false } %>
    <%= link_to "Edit", edit_account_client_path(current_account, client), class: "text-violet-700 hover:underline", data: { turbo_frame: "offcanvas", turbo_prefetch: false } %>
  </div>
  <div>
    <%= link_to account_client_path(current_account, client),
      data: { turbo_method: :delete, turbo_confirm: "Delete client?" },
      class: "float-right p-2 rounded-md bg-red-300 hover:bg-red-400 flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>
  </div>
<% end %>

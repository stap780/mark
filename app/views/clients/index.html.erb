<div class="flex items-center justify-between mb-4">
  <h1 class="text-xl font-semibold">Clients</h1>
  <div class="flex space-x-2">
    <%= search_form_for @search, url: account_clients_path(current_account), method: :get, html: { class: "flex items-center space-x-2" } do |f| %>
      <%= f.search_field :name_or_surname_or_email_or_phone_cont, placeholder: "Search by name, surname, email, phone...", class: "px-2 py-1 border rounded", style: "width: 350px;" %>
      <%= f.submit "Search", class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
      <%= link_to_clear account_clients_path(current_account) %>
    <% end %>
  </div>
  <div class="flex space-x-2">
  <%= link_to_new new_account_client_path(current_account), data: { turbo_frame: :offcanvas } %>
  </div>
</div>
<%= turbo_stream_from [dom_id(current_account), :clients] %>
<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[50px_40px_1fr_200px_150px_200px] gap-4 p-4 font-medium text-gray-700">
    <div class="text-center">#</div>
    <div></div>
    <div>Name</div>
    <div>Email</div>
    <div>Phone</div>
    <div></div>
  </div>
  <%= turbo_frame_tag [dom_id(current_account), :clients]  do %>
    <%= render @clients %>
    <%= render "shared/paginate", f: @clients %>
  <% end %>
</div>

<div class="flex items-center justify-between mb-4">
  <h1 class="text-xl font-semibold"><%= t('menu.users') %></h1>
  <div class="flex space-x-2">
    <%= link_to_new new_account_user_path(current_account), data: { turbo_frame: :offcanvas } unless current_account.partner? %>
  </div>
</div>

<%= turbo_stream_from dom_id(current_account, :users) %>
<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[1fr_150px_100px] gap-4 p-4 font-medium text-gray-700">
    <div><%= t('.email') %></div>
    <div><%= t('.role') %></div>
    <div></div>
  </div>
  <%= turbo_frame_tag dom_id(current_account, :users) do %>
    <%= render @users %>
  <% end %>
</div>

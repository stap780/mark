<%= form_with(model: [current_account, idgtl], class: "p-4") do |f| %>
  <%= render "shared/errors", object: f.object %>
  <div>
    <%= f.label :token_1, "TOKEN_1 (Basic)", class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :token_1, placeholder: "Basic token (TOKEN_1)", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
  </div>
  <div>
    <%= f.label :sender_name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :sender_name, placeholder: "sms_promo", class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
  </div>
  <div class="pt-2">
    <%= f.submit t('save'), class: "inline-flex items-center px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
  </div>
<% end %>


<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <div class="rounded-lg border bg-white p-4 shadow-sm">
    <h2 class="text-sm font-medium text-gray-500">Account</h2>
    <p class="mt-1 text-xl font-semibold text-gray-900"><%= current_account&.name || "none" %></p>
  </div>
  <div class="rounded-lg border bg-white p-4 shadow-sm">
    <h2 class="text-sm font-medium text-gray-500">Users</h2>
    <p class="mt-1 text-xl font-semibold text-gray-900"><%= current_account.users.count if current_account %></p>
  </div>
  <div class="rounded-lg border bg-white p-4 shadow-sm">
    <h2 class="text-sm font-medium text-gray-500">Status</h2>
    <p class="mt-1 text-xl font-semibold text-gray-900">OK</p>
  </div>
  <div class="rounded-lg border bg-white p-4 shadow-sm">
    <h2 class="text-sm font-medium text-gray-500">Products</h2>
    <p class="mt-1 text-xl font-semibold text-gray-900"><%= current_account.products.count if current_account %></p>
  </div>
  <div class="rounded-lg border bg-white p-4 shadow-sm">
    <h2 class="text-sm font-medium text-gray-500">Clients</h2>
    <p class="mt-1 text-xl font-semibold text-gray-900"><%= current_account.clients.count if current_account %></p>
  </div>
</div>

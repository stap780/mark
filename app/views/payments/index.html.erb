<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold"><%= t('payments.payments') %></h1>
  <div class="flex space-x-2">
    <%= search_form_for @search, url: account_payments_path(current_account), method: :get, html: { class: "flex items-center space-x-2" } do |f| %>
        <%= f.select :status_eq, 
            options_for_select(Payment.statuses.map { |key, value| [key.humanize, value] }, params.dig(:q, :status_eq)), 
            { include_blank: t(:status) }, { class: "px-2 py-1 border rounded" } %>
        <%= f.select :processor_eq, 
            options_for_select(Payment.processors.map { |key, value| [key.humanize, value] }, params.dig(:q, :processor_eq)), 
            { include_blank: t(:processor) }, { class: "px-2 py-1 border rounded" } %>
      <%= f.submit t('filter'), class: "px-3 py-1 bg-gray-200 rounded hover:bg-gray-300" %>
      <%= link_to account_payments_path(current_account), class: "px-3 py-1 bg-gray-100 rounded hover:bg-gray-200", title: t('clear') do %>
        <%= t('clear') %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="bg-white rounded-lg shadow divide-y">
  <div class="grid grid-cols-[120px_1fr_1fr_1fr_1fr_1fr_120px] gap-4 p-4 font-medium text-gray-700">
    <div><%= t('payments.number') %></div>
    <div><%= t('payments.date') %></div>
    <div><%= t('payments.plan') %></div>
    <div><%= t('payments.amount') %></div>
    <div><%= t('payments.processor') %></div>
    <div><%= t('payments.status') %></div>
    <div></div>
  </div>
  <%= turbo_frame_tag :payments do %>
    <%= render @payments %>
    <%= render "shared/paginate", f: @payments %>
  <% end %>
</div>


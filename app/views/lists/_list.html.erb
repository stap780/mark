<%= turbo_frame_tag list, class: "grid grid-cols-5 gap-4 p-4 items-center" do %>
  <div class="flex items-center space-x-2 truncate">
    <span class="inline-flex items-center justify-center"><%= raw list_icon_svg(list, active: true, classes: "h-5 w-5") %></span>
    <span class="truncate"><%= list.name %></span>
  </div>
  <div class="text-sm text-gray-600"><%= list.list_items.count %></div>
  <div class="text-sm text-gray-600"><%= list.icon_color %></div>
  <div class="space-x-2">
    <%= link_to "Edit", edit_account_list_path(current_account, list), class: "text-violet-700 hover:underline", data: { turbo_frame: "offcanvas", turbo_prefetch: false } %>
  </div>
  <div>
    <%= link_to account_list_path(current_account, list),
      data: { turbo_method: :delete, turbo_confirm: "ВНИМАНИЕ !!!! Вместе с листом удаляются позиции клиентов привязанных к нему. Удалить список?" },
      class: "float-right p-2 rounded-md bg-red-300 hover:bg-red-400 flex items-center justify-center" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-700" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    <% end %>
  </div>
<% end %>

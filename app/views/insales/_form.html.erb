<%= form_with(model: [current_account, insale], class: "p-4") do |f| %>
  <div class="space-y-4">
    <%= render "shared/errors", object: f.object %>
    <div>
      <%= f.label :api_key, class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_field :api_key, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div>
      <%= f.label :api_password, class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_field :api_password, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div>
      <%= f.label :api_link, class: "block text-sm font-medium text-gray-700" %>
  <%= f.text_field :api_link, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-2 py-2" %>
    </div>
    <div class="pt-2">
      <%= f.submit t('save'), class: "inline-flex items-center px-4 py-2 bg-violet-600 text-white rounded-md hover:bg-violet-700" %>
    </div>
  </div>
<% end %>

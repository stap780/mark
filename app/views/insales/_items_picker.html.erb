<%= render 'shared/offcanvas_inner', title: 'Add items from products XML' do %>
  <div data-controller="items-picker" data-search-url="<%= products_search_account_insales_path(current_account) %>">
    <label class="block text-sm font-medium text-gray-700">Search by name (model)</label>
    <input data-items-picker-target="input" type="text" placeholder="Type to search..." class="mt-1 mb-2 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5" data-action="input->items-picker#search">
    <div data-items-picker-target="results" class="space-y-2"></div>
  </div>
<% end %>



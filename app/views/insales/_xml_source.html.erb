<%= render 'shared/offcanvas_inner', title: t('.products_xml_source') do %>
  <div class="space-y-4">
    <div>
      <div class="text-sm text-gray-700 mb-2"><%= t('.option_1') %></div>
      <%= button_to t('.generate_now'), create_xml_account_insales_path(current_account), method: :post,
            form: { data: { turbo_stream: true } },
            class: 'inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700' %>
    </div>

    <div class="border-t pt-4">
      <div class="text-sm text-gray-700 mb-2"><%= t('.option_2') %></div>
      <%= form_with url: set_product_xml_account_insales_path(current_account), method: :patch, class: 'space-y-3' do %>
        <div>
          <label class="block text-sm font-medium text-gray-700"><%= t('.xml_url') %></label>
          <input type="url" name="product_xml" value="<%= @current_xml %>" placeholder="https://example.com/feed.xml"
                 class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-violet-500 focus:ring-violet-500 px-3 py-2.5">
        </div>
        <div class="flex justify-end space-x-2">
          <button type="button" class="px-3 py-1 rounded-md border text-gray-700 hover:bg-gray-50" data-action="offcanvas#close"><%= t('.cancel') %></button>
          <button type="submit" class="inline-flex items-center px-3 py-1 bg-violet-600 text-white rounded-md hover:bg-violet-700"><%= t('.save') %></button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>


